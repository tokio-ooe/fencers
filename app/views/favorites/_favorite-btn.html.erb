<% if recruit.favorited_by?(current_user) %>
  <%= link_to recruit.favorites.count, recruit_favorites_path(recruit), method: :delete, remote: true, class: "glyphicon glyphicon-heart" %>
<% else %>
  <%= link_to recruit.favorites.count, recruit_favorites_path(recruit), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty" %>
<% end %>
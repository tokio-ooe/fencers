<h2>User info</h2>

<%= form_with model:@user do |f| %>
  <%= render 'layouts/errors', obj: @user %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "name" %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.attachment_field :profile_image, class: "user_image" %>
  </div>

  <div class="field">
    <%= f.label :プロフィール %>
    <%= f.text_area :introduction, class: "introduction" %>
  </div>

  <div class="field">
    <%= f.label :所属 %>
    <%= f.text_field :belong, class: "belong" %>
  </div>

  <div class="field">
    <%= f.label :資格 %>
    <%= f.text_field :capacity, class: "capacity" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>